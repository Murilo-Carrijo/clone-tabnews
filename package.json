{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementation of https://www.tabnew.com.br to practice end-to-end programming.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run service:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint:secret": "npx secretlint \"**/*\"",
    "test": "npm run service:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "service:up": "docker compose -f infra/compose.yaml up -d",
    "service:stop": "docker compose -f infra/compose.yaml stop",
    "service:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "15.1.7",
    "node-pg-migrate": "7.9.1",
    "pg": "8.13.3",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.21.0",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.2",
    "secretlint": "9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
